@import './constant'

*
	box-sizing border-box
	&:before, &:after
		box-sizing border-box
html, body
	height 100%
	overflow hidden
body
	color #333
	// font-size 16px
	line-height 1.6
	font-weight 100
	letter-spacing 0.01em
	font-family Helvetica, Arial, sans-serif
	// opacity 0.1
	// visibility hidden

a
	color #3b8bba
	text-decoration none
	&:visited
		color #265778
		
.hidden
	display none !important
.invisible
	visibility hidden
.show
	display block !important
.pullLeft
	float left
.pullRight
	float right
.clearfix:before, .clearfix:after
	display table
	content " "
.clearfix:after
	clear both
.mleft15
	margin-left 15px !important
	
